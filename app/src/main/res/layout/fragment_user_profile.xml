<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/scene_fragment_user_profile"
        app:showPaths="true">

        <ImageView
            android:id="@+id/iv_bigBackground"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/teal_200"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/purple_200"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지운만"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_membershipCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="manjee.official@gmail.com"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_membership"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_membership" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>